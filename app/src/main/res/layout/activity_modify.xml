<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/modify_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="#333"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/modify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/modify_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginHorizontal="22dp"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.2"
            android:background="#00000000"
            android:textCursorDrawable="@null"/>

        <Button
            android:id="@+id/modify_save"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/outline_done_24"
            android:backgroundTint="@color/black"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/modify_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center|center_vertical"
            android:backgroundTint="#aaa"
            android:background="@drawable/baseline_cancel_18"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>